{
	"name": "project_name",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build:dev": "webpack --config config/webpack.config.js --mode development src/index.tsx",
		"build:prod": "webpack --config config/webpack.config.js --mode production src/index.tsx",
		"build:storybook": "build-storybook -config-dir ./config/storybook",
		"serve:dev": "webpack-dev-server --config config/webpack.config.js --port 8080",
		"serve:docs": "docsify serve --open --port 8081",
		"serve:storybook": "start-storybook --port 8082 --config-dir ./config/storybook",
		"test:unit": "jest --config config/jest.config.js",
		"check:style": "prettier --check ./src/**/*.{js,jsx,ts,tsx}",
		"check:lint": "eslint ./src/**/*.{js,jsx,ts,tsx}",
		"fix:style": "prettier --write ./src/**/*.{js,jsx,ts,tsx}",
		"fix:lint": "eslint --fix ./src/**/*.{js,jsx,ts,tsx}",
		"build": "npm run build:dev",
		"test": "npm run test:unit",
		"start": "npm run serve:dev",
		"check": "npm run check:style && npm run check:lint",
		"fix": "npm run fix:style && npm run fix:lint"
	},
	"eslintConfig": {
		"extends": [
			"prettier",
			"prettier/@typescript-eslint",
			"prettier/react",
			"react-app"
		],
		"ignorePatterns": [
			"/config/**",
			"/*"
		]
	},
	"prettier": {
		"tabWidth": 2,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "none",
		"jsxBracketSameLine": true,
		"endOfLine": "lf"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@babel/core": "^7.9.6",
		"@babel/preset-env": "^7.9.6",
		"@fullhuman/postcss-purgecss": "^2.2.0",
		"@storybook/addon-actions": "^6.0.19",
		"@storybook/addon-essentials": "^6.0.19",
		"@storybook/addon-links": "^6.0.19",
		"@storybook/react": "^6.0.19",
		"@svgr/webpack": "^5.4.0",
		"@typescript-eslint/eslint-plugin": "^2.34.0",
		"@typescript-eslint/parser": "^2.34.0",
		"autoprefixer": "^9.7.6",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.1.0",
		"camelcase": "^6.0.0",
		"clean-webpack-plugin": "^3.0.0",
		"css-loader": "^3.5.3",
		"docsify-cli": "^4.4.0",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.2",
		"eslint": "^7.0.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-config-react-app": "^5.2.1",
		"eslint-plugin-flowtype": "^4.7.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-react": "^7.20.6",
		"eslint-plugin-react-hooks": "^2.5.1",
		"file-loader": "^6.0.0",
		"html-webpack-plugin": "^4.3.0",
		"jest": "^26.0.1",
		"jest-environment-jsdom-fourteen": "^1.0.1",
		"jest-enzyme": "^7.1.2",
		"mini-css-extract-plugin": "^0.9.0",
		"optimize-css-assets-webpack-plugin": "^5.0.3",
		"postcss-import": "^12.0.1",
		"postcss-loader": "^3.0.0",
		"postcss-normalize": "^9.0.0",
		"prettier": "^2.0.5",
		"react-is": "^16.13.1",
		"style-loader": "^1.2.1",
		"tailwindcss": "^1.4.6",
		"terser-webpack-plugin": "^4.1.0",
		"ts-jest": "^26.0.0",
		"ts-loader": "^7.0.4",
		"typescript": "^3.8.3",
		"webpack": "^4.43.0",
		"webpack-build-notifier": "^2.0.1",
		"webpack-cli": "^3.3.11",
		"webpack-dev-server": "^3.11.0",
		"webpack-manifest-plugin": "^2.2.0"
	},
	"dependencies": {
		"@types/enzyme": "^3.10.5",
		"@types/jest": "^25.2.2",
		"@types/react": "^16.9.34",
		"@types/react-dom": "^16.9.7",
		"react": "^16.13.1",
		"react-dom": "^16.13.1"
	}
}
